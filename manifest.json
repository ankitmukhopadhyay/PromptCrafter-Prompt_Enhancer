{
  "manifest_version": 3,
  "name": "PromptCrafter - AI Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your prompts for ChatGPT and Google Scholar with AI-powered rewriting",

  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "http://localhost:8080/*",
    "https://your-production-domain.com/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptCrafter"
  },

  "options_page": "settings.html",

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://scholar.google.com/*",
        "https://www.google.com/search*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
